{
  "compilerOptions": {
    "outDir": "./out",
    "module": "CommonJS",
    "target": "ES2019",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "./src/**/*"
  ]
}
